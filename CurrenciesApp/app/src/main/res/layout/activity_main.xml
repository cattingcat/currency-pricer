<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    a:id="@+id/activity_main"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:orientation="vertical"
    a:paddingBottom="@dimen/activity_vertical_margin"
    a:paddingLeft="@dimen/activity_horizontal_margin"
    a:paddingRight="@dimen/activity_horizontal_margin"
    a:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.zxc123zxc.currencies.activities.MainActivity">

    <TextView
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:textSize="43sp"
        a:onClick="onInstrumentChoise"
        a:tag="USD"
        a:text="USD" />

    <TextView
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:textSize="43sp"
        a:onClick="onInstrumentChoise"
        a:tag="EUR"
        a:text="EUR" />

</LinearLayout>
