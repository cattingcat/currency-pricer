<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    a:layout_width="match_parent"
    a:layout_height="match_parent"
    a:fitsSystemWindows="true"
    tools:context="com.currency_pricer.myapplication.MainActivity">

    <android.support.design.widget.AppBarLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            a:id="@+id/toolbar"
            a:layout_width="match_parent"
            a:layout_height="?attr/actionBarSize"
            a:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>


    <LinearLayout a:id="@+id/spreadCollectionView"
        a:orientation="vertical"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:layout_marginTop="56dp"/>

    <android.support.design.widget.FloatingActionButton
        a:id="@+id/fab"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_gravity="bottom|end"
        a:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/stat_notify_sync_noanim" />

</android.support.design.widget.CoordinatorLayout>
